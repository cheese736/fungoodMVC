@page "/Tables/{orderNumber}/Edit"
@model fungoodMVC.Areas.Backstage.Pages.Tables.Edit
@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-between">
    <h1>訂單內容 </h1>
</div>

<div>
            <table class="m-auto w-75">
            <thead>
                <tr>
                    <th></th>
                    <th>品名</th>
                    <th class="text-center">單價</th>
                    <th class="text-center">辣度</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in @Model.Orders)
                {
                    <tr>
                        <td></td>
                        <td>@order.FoodItem.Name</td>
                        <td class="text-center">@order.FoodItem.Price</td>
                        <td class="text-center">@order.Spiciness</td>
                        <td>
                            <a asp-page="./Delete" asp-route-id="" class="text-decoration-none">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                }
                <tr>
                    <td>合計</td>
                    <td></td>
                    <td class="text-center">
                        @Model.Orders.Aggregate(0,(acc, current) => 
                        {
                            return acc + current.FoodItem.Price;
                        })
                    </td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        <div class="d-grid p-3 gap-2">
            <button class="btn btn-secondary" type="button">
                後台編輯訂單
            </button>
            <button class="btn btn-secondary" type="button">
                結帳
            </button>
        </div>
</div>