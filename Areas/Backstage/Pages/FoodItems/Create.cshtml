@page
@model fungoodMVC.Areas.Backstage.Pages.FoodItems.CreateModel

<body>

<h4>FoodItem</h4>
<hr />
<div class="row">
    <div class="col">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodItemDto.Name" class="control-label"></label>
                <input asp-for="FoodItemDto.Name" class="form-control" />
                <span asp-validation-for="FoodItemDto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItemDto.Price" class="control-label"></label>
                <input asp-for="FoodItemDto.Price" class="form-control" />
                <span asp-validation-for="FoodItemDto.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItemDto.CategoryId" class="control-label"></label>
                <select asp-for="FoodItemDto.CategoryId" class ="form-control" asp-items="ViewBag.CategorySelectList">
                </select>
                <span asp-validation-for="FoodItemDto.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label"></label>
                <input  class="form-control" type="file" name="foodImage">
                <span  class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FoodItemDto.HasSpiciness" /> @Html.DisplayNameFor(model => model.FoodItemDto.HasSpiciness)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

</body>
