@page
@model fungoodMVC.Pages_FoodItems.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItem[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItem[0].category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItem[0].ImageSrc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItem[0].HasSpiciness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItem[0].Inserted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItem[0].LastUpdated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FoodItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageSrc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSpiciness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inserted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
