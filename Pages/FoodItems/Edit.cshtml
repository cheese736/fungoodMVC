@page
@model fungoodMVC.Pages.FoodItems.EditModel

<!DOCTYPE html>

<body>

<h4>FoodItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodItem.Id" />
            <div class="form-group">
                <label asp-for="FoodItem.Name" class="control-label"></label>
                <input asp-for="FoodItem.Name" class="form-control" />
                <span asp-validation-for="FoodItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.Price" class="control-label"></label>
                <input asp-for="FoodItem.Price" class="form-control" />
                <span asp-validation-for="FoodItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.CategoryId" class="control-label"></label>
                <select asp-for="FoodItem.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="FoodItem.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.ImageSrc" class="control-label"></label>
                <input asp-for="FoodItem.ImageSrc" class="form-control" />
                <span asp-validation-for="FoodItem.ImageSrc" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FoodItem.HasSpiciness" /> @Html.DisplayNameFor(model => model.FoodItem.HasSpiciness)
                </label>
            </div>
            <div class="form-group text-end">
                <a asp-page="./Index">Back to List</a> |
                <input type="submit" value="Save" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

</body>
